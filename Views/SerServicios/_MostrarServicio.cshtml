@using ClienteApi.Models;
@model ModSerServicios
@{
    Layout = null;
}

<div class="card card-success card-outline">
    <div class="card-header text-center">
        <h3 class="card-title">Actualizar datos del servicio</h3>
    </div>
    <div class="form-group" style="display:none;">
        <div class="custom-file">
            <label class="form-label"> Foto</label>
            <input type="file" id="inputImg" class="" />
        </div>
    </div>
    <div class="card-body box-profile">
        <div class="row">
            <div class="col-4">
                <div class="text-center" id="divImg" style="cursor:pointer;">
                    <img class="profile-user-img img-fluid"
                         id="imgPerfil"
                         src='@Model.Ruta'
                         alt="User profile picture" />
                </div>
            </div>
            <div class="col-8">
                <div class="mb-2">
                    <input type="hidden" asp-for="SerCodigo" id="txtCodigo" value="@Model.SerCodigo" />
                    <label class="form-label">Nombre</label>
                    <input type="text" class="form-control form-control-sm" id="txtNombre" asp-for="SerNombre" value="@Model.SerNombre" />
                </div>
                <div class="mb-2">
                    <label class="form-label">Descripción</label>
                    <textarea class="form-control form-control-sm" id="txtDescripcion" asp-for="SerDescripcion">@Model.SerDescripcion </textarea>
                </div>
                <div class="mb-2">
                    <label class="form-label">Precio</label>
                    <div class="input-group mb-2">
                        <span class="input-group-text">$</span>
                        <input type="text" class="form-control" id="txtPrecio" asp-for="SerPrecio" value="@Model.SerPrecio" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer d-grid grap-2 d-md-flex justify-content-md-end">
        <button id="btn_cancelar" class="btn btn-default btn-sm"
                data-url="@Url.Action("NuevoServicio", "SerServicios")">
            <i class="bi-eraser-plus"></i> Cancelar
        </button>
        <button id="btn_actualizar" class="btn btn-warning btn-sm"
                data-url="@Url.Action("ActualizarServicio", "SerServicios")">
            <i class="bi-folder-plus"></i> Guardar
        </button>
    </div>
</div>
@{
    await Html.RenderPartialAsync("~/Views/SerServicios/_script_servicios.cshtml");
}